@model IEnumerable<PlusMinus.Core.Models.Accessory>

@{
    ViewData["Title"] = "Список аксесуарів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Аксесуари</h1>

<p>
    <a asp-action="CreateAccessory" class="btn btn-success">Створити новий аксесуар</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Назва</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BrandSortParam"]">Виробник</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ColorSortParam"]">Колір</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MaterialSortParam"]">Матеріал</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AccessoryTypeSortParam"]">Тип аксесуару</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParam"]">Вартість</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AmountSortParam"]">Кількість</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessoryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="EditAccessory" asp-route-id="@item.ProductId" class="btn btn-success">Edit</a>
                <a asp-action="AccessoryDetails" asp-route-id="@item.ProductId" class="btn btn-info">Details</a>
                <a asp-action="DeleteAccessory" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
