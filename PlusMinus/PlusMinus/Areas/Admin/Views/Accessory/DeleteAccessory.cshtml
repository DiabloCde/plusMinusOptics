@model PlusMinus.Core.Models.Accessory

@{
    ViewData["Title"] = "Видалення аксесуару";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити аксесуар?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва аксесуару:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Виробник:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            Колір:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            Матеріал:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
            Тип аксесуару:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccessoryType)
        </dd>
        <dt class = "col-sm-2">
            Вартість:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Кількість на складі:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="DeleteAccessory">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Повернутися до списку</a>
    </form>
</div>
