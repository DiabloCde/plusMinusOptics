@model PlusMinus.Core.Models.Glasses

@{
    ViewData["Title"] = "Видалення окулярів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення окулярів</h1>

<h3>Ви впевненні, що хочете видалити окуляри?</h3>
<div>
    <h4>Glasses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Виробник:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            Колір:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            Форма оправи:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Form)
        </dd>
        <dt class = "col-sm-2">
            Матеріал:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
           Потужність:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dioptre)
        </dd>
        <dt class = "col-sm-2">
            Вартість:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Кількість на складі:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="DeleteGlasses">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Повернення до списку</a>
    </form>
</div>
