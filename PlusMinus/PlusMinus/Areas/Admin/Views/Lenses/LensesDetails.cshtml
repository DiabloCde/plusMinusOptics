@model PlusMinus.Core.Models.Lenses

@{
    ViewData["Title"] = "Деталі лінз";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Деталі лінз</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Зображення:
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" style="border-radius:5px; border: 1px solid #bbb9b9; width: 128px; height:128px" />
        </dd>
        <dt class="col-sm-2">
            Назва:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Виробник:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            Діоптрії:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dioptre)
        </dd>
        <dt class="col-sm-2">
            Базова кривизна:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseCurve)
        </dd>
        <dt class="col-sm-2">
            Кількість в упаковці:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfUnits)
        </dd>
        <dt class="col-sm-2">
            Діаметр:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diameter)
        </dd>
        <dt class="col-sm-2">
            Термін придатності:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            Вартість:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Кількість на складі:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditLenses" asp-route-id="@Model.ProductId" class="btn btn-success">Редагувати</a>
    <a asp-action="Index" class="btn btn-primary">Повернення до списку</a>
</div>
