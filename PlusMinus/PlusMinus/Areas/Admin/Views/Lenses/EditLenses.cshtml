@model PlusMinus.ViewModels.LensesViewModel

@{
    ViewData["Title"] = "Редагування лінз";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редагувати лінзи</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLenses" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва лінз:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Виробник:</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dioptre" class="control-label">Діоптрії:</label>
                <input type="number" min="-20.0" max="0.0" step="0.5" asp-for="Dioptre" class="form-control" />
                <span asp-validation-for="Dioptre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDateValue" class="control-label">Термін придатності:</label>
                <input asp-for="ExpirationDateValue" class="form-control" />
                <p class="control-label">днів</p>
                <span asp-validation-for="ExpirationDateValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseCurve" class="control-label">Базова кривизна:</label>
                <input type="number" step="0.1" asp-for="BaseCurve" class="form-control" />
                <span asp-validation-for="BaseCurve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfUnits" class="control-label">Кількість лінз в упаковці:</label>
                <input asp-for="NumberOfUnits" class="form-control" />
                <span asp-validation-for="NumberOfUnits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diameter" class="control-label">Діаметр:</label>
                <input type="number" step="0.1" asp-for="Diameter" class="form-control" />
                <span asp-validation-for="Diameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Вартість:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Кількість на складі:</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Зображення:
                </div>
                <div class="col-3">
                    <img src="@Model.ImageUrl" width="350%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Виберіть файл:</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Повернення до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
