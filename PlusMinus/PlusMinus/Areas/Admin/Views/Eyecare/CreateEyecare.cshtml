@using PlusMinus.Core.Models.Enumerations
@model PlusMinus.Core.Models.Eyecare

@{
    ViewData["Title"] = "Створення продукту догляду";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Створення продукту для догляду</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEyecare" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Виробник:</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label">Об'єм (мл):</label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label">Назначення товару:</label>
                @Html.DropDownListFor(m => m.Purpose, new SelectList(Enum.GetValues(typeof(EyecarePurpose))), "Виберіть назначення: ")
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Вартість:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Кількість на складі:</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Зображення:</label>
                <div class="custom-file">
                    <input asp-for="Image" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Виберіть файл:</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати товар догляду" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Повернення до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
