@model PlusMinus.Core.Models.Eyecare

@{
    ViewData["Title"] = "Деталі продукту догляду";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Деталі товару</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Зображення:
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" style="border-radius:5px; border: 1px solid #bbb9b9; width: 128px; height:128px" />
        </dd>
        <dt class="col-sm-2">
            Назва:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Виробник:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            Об'єм (мл):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volume)
        </dd>
        <dt class="col-sm-2">
            Назначення товару:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purpose)
        </dd>
        <dt class="col-sm-2">
            Вартість товару:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Кількість на складі:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditEyecare" asp-route-id="@Model.ProductId" class="btn btn-success">Редагувати</a>
    <a asp-action="Index" class="btn btn-primary">Повернення до списку</a>
</div>
