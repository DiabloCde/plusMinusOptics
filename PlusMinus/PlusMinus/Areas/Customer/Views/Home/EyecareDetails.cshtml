@{
    ViewData["Title"] = "Eyecare";
}

@using PlusMinus.Core.Models;
@using PlusMinus.Utils
@model Eyecare;

<div class="product_panel">
    <form asp-action="EyecareDetails">
        <div class="product_content">
            <div class="product_up">
                <h4 class="product_up_title">@Model.Name</h4>
                @if (Model.Amount <= 0)
                {
                    <h5>Нема в наявності</h5>
                }
                <input type="hidden" asp-for="Name" />
            </div>
            <div class="product_down">
                <div class="product_left">
                    <img src="@Model.Image" alt="" class="product_left_img">
                    <input type="hidden" asp-for="Image" />
                </div>
                <div class="product_right">
                    <h4 class="product_up_title">@Model.Price грн</h4>
                    <input type="hidden" asp-for="Price" />
                    <p>Про товар:</p>

                    <input type="hidden" asp-for="ProductId" />

                    <label>Призначення:</label>
                    <label>@Model.Purpose</label><br>
                    <input type="hidden" asp-for="Purpose" />

                    <label>Об'єм:</label>
                    <label>@Model.Volume</label><br>
                    <input type="hidden" asp-for="Volume" />

                    <label>Бренд:</label>
                    <label>@Model.Brand</label><br>
                    <input type="hidden" asp-for="Brand" />

                    <input class="product_submit" value="Додати до кошика" type="submit" @Html.DisabledIf(Model.Amount <= 0)/>
                </div>
            </div>
        </div>
    </form>
</div>