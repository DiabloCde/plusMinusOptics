@model List<PlusMinus.Core.Models.Product>

<div content="cart-container">
     <div class="cart">
          <div class="name">
               <h2>Кошик</h2>
          </div>
          <br/>
          @foreach (var item in Model)
          {
               <div class="cart-item">
                    <div class="item-img">
                         <img src="@item.Image" alt="@item.Name"/>
                    </div>
                    <div class="item-data">
                         <div class="item-data-up">
                              <div class="item-name">
                                   <h2>@item.Name</h2>
                              </div>s
                         </div>
                         <div class="item-data-mid">
                              <div class="item-price">
                                   <h2>@item.Price</h2>
                              </div>
                              <div class="item-amount">
                                   <button class = "btn delete-count">-</button>
                                   <h2>@item.Amount</h2> 
                                   <button class = "btn add-count">+</button> 
                              </div>
                              <div class="item-total">
                                   <h2>@item.Amount * @item.Price</h2>
                              </div>
                         </div>
                         <div class="item-data-down">
                              <button class="btn btn-danger" onclick="">Видалити</button>
                         </div>
                    </div>
               </div>
          }
     </div>
     <div class="cart-info">
         <div class="name">
             <h2>Всього</h2>
         </div>
         <div class="data">
             <p><b>Сумма товарів</b></p>
             <p>@{{ }}</p>
             <p><b>Сумма знижки</b></p>
             <p>@{{ }}</p>
             <p><b>Сумма доставки</b></p>
             <p>@{{ }}</p>
             <br>
             <p><b>Всього до оплати</b></p>
             <p><b>@{{}}</b></p>
         </div>
     </div>
</div>

